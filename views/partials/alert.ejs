<% if (typeof messages !== undefined && messages.success != "") { %>
<div
  id="alert-bg"
  class="animate-fade-in absolute bg-black/60 inset-0 z-10 flex justify-center p-4 items-start duration-300"
>
  <div
    id="alert-card"
    class="relative h-20 w-full md:w-5/6 max-w-lg border-2 rounded-lg border-black bg-yellow-400 flex animate-slide-from-top"
  >
    <!-- close alert button -->
    <div
      id="close-alert"
      class="cursor-pointer absolute h-8 w-8 flex justify-center items-center right-0 top-0"
    >
      <i class="fas fa-times text-xl text-center"></i>
    </div>
    <!-- left side -->
    <div
      class="h-full flex justify-center items-center bg-green-500 px-2 rounded-l-md border-r-2 border-black"
    >
      <div
        class="w-9 h-9 md:w-10 md:h-10 bg-green-400 rounded-full border-2 border-black grid content-center"
      >
        <!-- fa-times bg-red-500  || fa-check bg-green-400-->
        <i class="fas fa-check text-xl text-white text-center mt-[4px]"></i>
      </div>
    </div>
    <!-- right side -->
    <div class="h-full flex justify-center items-center ml-2">
      <p class="text-center font-fira-sans text-xs sm:text-sm md:text-base">
        <%=messages.success %>
      </p>
    </div>
  </div>
</div>
<script src="../../misc_js/alert.js"></script>
<% } else if(typeof messages !== undefined && messages.fail != "") { %>
<div
  id="alert-bg"
  class="animate-fade-in absolute bg-black/60 inset-0 z-10 flex justify-center p-4 items-start duration-300"
>
  <div
    id="alert-card"
    class="relative h-20 w-full md:w-5/6 max-w-lg border-2 rounded-lg border-black bg-yellow-400 flex animate-slide-from-top"
  >
    <!-- close alert button -->
    <div
      id="close-alert"
      class="cursor-pointer absolute h-8 w-8 flex justify-center items-center right-0 top-0"
    >
      <i class="fas fa-times text-xl text-center"></i>
    </div>
    <!-- left side -->
    <div
      class="h-full flex justify-center items-center bg-red-500 px-2 rounded-l-md border-r-2 border-black"
    >
      <div
        class="w-9 h-9 md:w-10 md:h-10 bg-red-600 rounded-full border-2 border-black grid content-center"
      >
        <!-- fa-times bg-red-500  || fa-check bg-green-400-->
        <i class="fas fa-times text-xl md:text-2xl text-white text-center"></i>
      </div>
    </div>
    <!-- right side -->
    <div class="h-full flex justify-center items-center ml-2">
      <p class="text-center font-fira-sans text-xs sm:text-sm md:text-base">
        <%=messages.fail %>
      </p>
    </div>
  </div>
</div>
<script src="../../misc_js/alert.js"></script>
<%}%>
