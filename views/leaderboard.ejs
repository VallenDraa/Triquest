<!-- Leaderboard -->
<%- include("./partials/header") %>

<main class="mt-auto">
  <section class="grid content-center min-h-full">
    <div class="max-w-screen-2xl w-11/12 xl:w-9/12 mx-auto">
      <div
        class="bg-yellow-200 md:bg-yellow-300 border-4 border-black rounded-xl shadow-2xl md:p-4 my-14"
      >
        <h1
          class="text-center my-3 md:mt-0 md:mb-2 font-teko text-3xl md:text-5xl font-bold underline"
        >
          LEADERBOARD
        </h1>
        <!-- top -->
        <div
          class="font-fira-sans space-y-3 md:border-4 border-black rounded-t-lg md:rounded-lg bg-yellow-200 pt-0 p-4 md:pt-4 h-full"
        >
          <!-- Ranks  -->
          <section class="mb-5">
            <!-- Category Selectors -->
            <div class="grid grid-cols-2 gap-2">
              <!-- country -->
              <div>
                <label
                  for="country"
                  class="text-lg font-bold ml-2 inline-block"
                >
                  Country
                </label>
                <select name="country" id="country" class="opt-select">
                  <% countries.forEach(country => { %>
                  <option value="<%=country.code%>">
                    <%= country.name %> <%= country.emoji%>
                  </option>
                  <% }) %>
                  <!-- more options will be added through country.js -->
                </select>
              </div>
              <!-- Gamemode -->
              <div>
                <label
                  for="gamemode"
                  class="text-lg font-bold ml-2 inline-block"
                >
                  Gamemode
                </label>
                <select name="gamemode" id="gamemode" class="opt-select">
                  <option value="Campaign">CampaignüöÄ</option>
                  <option value="Random">Randomüå™Ô∏è</option>
                  <option value="Challenge">Challengeüî•</option>
                  <option value="Custom">Custom‚ùì</option>
                </select>
              </div>
              <!-- Category -->
              <div>
                <label
                  for="category"
                  class="text-lg font-bold ml-2 inline-block"
                  >Category
                </label>
                <select name="category" id="category" class="opt-select">
                  <%-include("./partials/categories") %>
                </select>
              </div>
              <!-- Difficulty -->
              <div>
                <label
                  for="difficulty"
                  class="text-lg font-bold ml-2 inline-block"
                  >Difficulty
                </label>
                <select name="difficulty" id="difficulty" class="opt-select">
                  <!-- <option value="any">Any Difficulties</option> -->
                  <option value="random">Random Difficulties</option>
                  <option value="easy">Easy</option>
                  <option value="medium">Medium</option>
                  <option value="hard">Hard</option>
                </select>
              </div>
            </div>
          </section>
          <a
            id="leaderboard-search"
            class="border-2 md:border-4 border-black text-center w-full mx-auto block md:py-1 rounded md:rounded-md bg-orange-300 hover:bg-green-400 hover:text-white active:bg-green-600 duration-300 cursor-pointer font-teko font-bold text-base md:text-xl"
            >SEARCH üîç
          </a>
        </div>

        <!-- the leaderboard -->
        <div
          id="leaderboard-table"
          class="md:mt-4 bg-yellow-100 border-y-2 md:border-4 border-black md:mb-2 md:rounded-sm overflow-y-auto relative h-96"
        >
          <%- include("./partials/loading-leaderboard") %>
          <!-- table -->
          <div class="absolute inset-0">
            <div class="w-full text-lg sm:text-xl md:text-2xl flex flex-col">
              <div
                class="text-center font-teko font-bold border-b-2 border-black sticky top-0 w-full bg-orange-300 shadow-lg tb-heading flex justify-between items-center"
              >
                <p class="p-1 bg-orange-400 basis-[20%]">Rank</p>
                <p class="p-1 bg-amber-400 basis-[40%]">Username</p>
                <p class="p-1 bg-yellow-400 basis-[40%]">Score</p>
              </div>
              <section id="table-content"></section>
            </div>
          </div>
        </div>

        <!-- page buttons -->
        <footer
          class="flex justify-center rounded-b-lg md:rounded-none py-2 md:p-0"
        >
          <button id="prev-page" class="page-btn">
            <img src="../svg/angle-left-solid.svg" class="h-8" />
          </button>

          <div class="mx-2 space-x-1 flex items-center">
            <span id="current-page" class="font-fira-sans text-xl md:text-2xl"
              >1</span
            >
            <span class="font-fira-sans text-xl md:text-2xl">of</span>
            <span
              id="total-page"
              class="font-fira-sans text-xl md:text-2xl"
            ></span>
          </div>

          <button id="next-page" class="page-btn">
            <img src="../svg/angle-right-solid.svg" class="h-8" />
          </button>
        </footer>
      </div>
    </div>
  </section>
</main>

<script src="../score_js/leaderboard.js"></script>
<script src="../misc_js/interaction.js"></script>

<!-- Footer -->
<%- include("./partials/footer") %>
